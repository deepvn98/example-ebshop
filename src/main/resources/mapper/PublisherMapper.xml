<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.ebshop.mapper.PublisherMapper">
    <resultMap id="PublisherResultMap" type="com.example.ebshop.model.Publisher">
        <id column="id" property="id"/>
        <result column="isbn" property="isbn"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="findAllPublisher" resultMap="PublisherResultMap">
        SELECT *
        FROM publisher
    </select>
    <select id="findPublisherByIsbn"  resultMap="PublisherResultMap">
        SELECT *
        FROM publisher WHERE isbn = #{isbn}
    </select>


    <insert id="insertPublisher" parameterType="com.example.ebshop.model.Publisher" >
        INSERT INTO Publisher(isbn,name) VALUES(#{isbn},#{name })
    </insert>

    <update id="updatePublisher">
        UPDATE
        Students SET
        <if test="student.name!=null">name=#{student.name},</if>
        <if test="student.email!=null">email=#{student.email}</if>
        WHERE studId=#{id}
    </update>

</mapper>